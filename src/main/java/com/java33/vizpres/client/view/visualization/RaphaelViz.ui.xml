<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:v='urn:import:com.java33.vizpres.client.view.visualization'>
  <ui:style>
    .info {
      color: #0c6aa8;
      font-size: 16px;
      font-weight: bold;
    }
  </ui:style>
  <g:FlowPanel>
    <g:Label text="Technique: Use Raphael JS to render SVG/VML to the browser."/>
    <v:RaphaelCanvas ui:field="canvas"/>
    <g:Label ui:field="infoLabel" addStyleNames="{style.info}"/>
  </g:FlowPanel>
</ui:UiBinder>
