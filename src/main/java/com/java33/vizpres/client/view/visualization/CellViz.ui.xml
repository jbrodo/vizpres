<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:c='urn:import:com.google.gwt.user.cellview.client'>
  <ui:style>
    @external .java33-barCell;

    .java33-barCell {
      background-color: #ff6600;
      color: white;
      font-size: 10px;
      height: 20px;
      margin: 2px 0;
      padding: 4px 4px 0;
    }

    .info {
      color: #0c6aa8;
      font-size: 16px;
      font-weight: bold;
    }
  </ui:style>
  <g:FlowPanel>
    <g:Label text="Technique: Use a GWT Cell view with a custom cell."/>
    <c:CellList ui:field="cellList"/>
    <g:Label ui:field="infoLabel" addStyleNames="{style.info}"/>
  </g:FlowPanel>
</ui:UiBinder>
